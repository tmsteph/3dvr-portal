{
  "name": "3dvr-portal",
  "version": "1.0.0",
  "description": "Main portal for 3dvr.tech with Stripe webhooks and email notifications",
  "type": "module",
  "scripts": {
    "dev": "http-server -c-1 -p 3000",
    "start": "npm run dev",
    "test": "node --test",
    "money:loop": "node scripts/money/run-loop.mjs",
    "money:autopilot": "node scripts/money/run-autopilot.mjs",
    "playwright:install": "npx playwright install firefox",
    "playwright:smoke:linux": "npm run playwright:install && node scripts/playwright/smoke.mjs",
    "playwright:smoke": "sh scripts/playwright/run-smoke.sh"
  },
  "dependencies": {
    "nodemailer": "^6.9.8",
    "stripe": "^12.17.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "playwright": "^1.45.0"
  }
}
