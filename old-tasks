<h1>‚úÖ Task Board</h1>

<div id="new-task">
  <input type="text" id="task-input" placeholder="New Task...">
  <button onclick="addTask()">Add Task</button>
</div>

<div id="tasks"></div>

<script>
// Setup GUN with multiple peers
const gun = Gun({
  peers: [
    'https://gun-manhattan.herokuapp.com/gun',
    'https://gun-eu.herokuapp.com/gun',
    'https://gun-us.herokuapp.com/gun',
    'https://gun-manhattan2.herokuapp.com/gun'
  ]
});

const tasks = gun.get('3dvr-tasks');

// Add new task
function addTask() {
  const text = document.getElementById('task-input').value.trim();
  if (!text) return;
  tasks.set({ text, createdAt: Date.now() });
  document.getElementById('task-input').value = '';
}

// Store and render tasks
const taskList = {};

tasks.map().on((task, id) => {
  if (!task) {
    document.getElementById(id)?.remove();
    delete taskList[id];
    return;
  }
  taskList[id] = task;
  renderTasks();
});

function renderTasks() {
  const container = document.getElementById('tasks');
  container.innerHTML = '';
  Object.entries(taskList)
    .sort((a, b) => b[1].createdAt - a[1].createdAt)
    .forEach(([id, task]) => {
      const div = document.createElement('div');
      div.className = 'task';
      div.id = id;
      div.innerHTML = `${task.text}<span class="delete">üóë</span>`;
      div.querySelector('.delete').onclick = () => tasks.get(id).put(null);
      container.appendChild(div);
    });
}
</script>

